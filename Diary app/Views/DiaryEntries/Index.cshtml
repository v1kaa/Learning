@model List<DiaryEntry>





<div >
	<h1>Diary Entries</h1>
	
<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<th>Title</th>
		    <th>Content</th>
		    <th>Date</th>
		    <th>Actions</th>
		</thead>
		<tbody>
			@foreach(var entry in Model){
				<tr>
					<td>@entry.Title</td>
					<td>@entry.Content</td>
					<td>@entry.Created</td>
					<td>
						<a asp-controller="DiaryEntries" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm">Edit</a>
						<a asp-controller="DiaryEntries" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm">Delete</a>

					</td> 
				</tr>
			}
		</tbody>
	</table>




</div>
<div >
		<a class="btn btn-primary" asp-controller="DiaryEntries" asp-action="Create">Create New</a>
</div>

